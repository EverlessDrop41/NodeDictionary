{% extends "layout.nunjucks" %}

{% block content %}
<div class="row">
	<form action="/define" method="GET">
		<div class="nine columns">
			<input id="word" name="word" type="text" class="u-full-width">
		</div>
		<div class="three columns">
			<input class="button-primary u-full-width" type="submit" value="Define">
		</div>
	</form>
</div>
<div class="row">
	<p>This free online english dictionary powered by the <a href="https://www.wordsapi.com/">Words API</a></p>
</div>
{% endblock %}